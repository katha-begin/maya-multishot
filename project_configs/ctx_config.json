{
  "version": "1.0",
  "project": {
    "name": "SWA",
    "code": "SWA",
    "description": "Sample project configuration for Context Variables Pipeline"
  },
  "roots": {
    "windows": {
      "projRoot": "V:/",
      "imgRoot": "W:/"
    },
    "linux": {
      "projRoot": "/mnt/igloo_swa_v/",
      "imgRoot": "/mnt/igloo_swa_w/"
    }
  },
  "staticPaths": {
    "sceneBase": "all/scene"
  },
  "templates": {
    "shotRoot": "$projRoot$project/$sceneBase/$ep/$seq/$shot",
    "shotWork": "$projRoot$project/$sceneBase/$ep/$seq/$shot/$dept/version",
    "publishPath": "$projRoot$project/$sceneBase/$ep/$seq/$shot/$dept/publish",
    "cachePath": "$projRoot$project/$sceneBase/$ep/$seq/$shot/$dept/publish/$ver",
    "imgPath": "$imgRoot$project/$sceneBase/$ep/$seq/$shot/$dept/publish/$ver/<RenderLayer>/<RenderLayer>",
    "assetPath": "$projRoot$project/$sceneBase/$ep/$seq/$shot/$dept/publish/$ver/$ep_$seq_$shot__$assetType_$assetName_$variant.$ext",
    "fullFilename": "$ep_$seq_$shot__$assetType_$assetName_$variant.$ext",
    "namespace": "$assetType_$assetName_$variant",
    "namespaceShader": "$assetType_$assetName_$variant_Shade",
    "namespaceGroom": "$assetType_$assetName_$variant_Groom"
  },
  "patterns": {
    "fullFormat": "$ep_$seq_$shot__$assetType_$assetName_$variant.$ext",
    "namespaceFormat": "$assetType_$assetName_$variant",
    "shotContext": "$ep_$seq_$shot",
    "version": "v###"
  },
  "extensions": [
    ".abc",
    ".vdb",
    ".ass",
    ".rs",
    ".ma",
    ".mb"
  ],
  "tokens": {
    "ep": {
      "description": "Episode code",
      "example": "Ep04",
      "pattern": "Ep\\d+"
    },
    "seq": {
      "description": "Sequence code",
      "example": "sq0070",
      "pattern": "sq\\d+"
    },
    "shot": {
      "description": "Shot code",
      "example": "SH0170",
      "pattern": "SH\\d+"
    },
    "dept": {
      "description": "Department",
      "example": "anim",
      "values": ["anim", "layout", "fx", "lighting"]
    },
    "ver": {
      "description": "Version",
      "example": "v003",
      "pattern": "v\\d{3}"
    },
    "assetType": {
      "description": "Asset type",
      "example": "CHAR",
      "values": ["CHAR", "PROP", "SET", "VEH", "CAM"]
    },
    "assetName": {
      "description": "Asset name",
      "example": "CatStompie"
    },
    "variant": {
      "description": "Asset variant",
      "example": "001",
      "pattern": "\\d{3}"
    }
  },
  "renderSettings": {
    "enabled": true,
    "outputPath": {
      "template": "imgPath",
      "deptSource": "sceneFile",
      "deptFallback": "lighting",
      "versionSource": "sceneFile",
      "versionFallback": "v001",
      "sceneFilePattern": "{ep}_{seq}_{shot}_{dept}_{variant}_{ver}.ma"
    },
    "camera": {
      "autoSetFromShot": true,
      "assetType": "CAM"
    }
  },
  "cache": {
    "lastUpdated": null,
    "episodes": [],
    "sequences": {},
    "shots": {},
    "departments": {},
    "assets": {
      "CHAR": [],
      "PROP": [],
      "SET": [],
      "VEH": []
    },
    "versions": {}
  },
  "shotMetadata": {
    "enabled": true,
    "filenamePattern": ".{shot_id}.json",
    "location": "shotRoot",
    "fieldMapping": {
      "frameRange": {
        "jsonField": "shot_info",
        "parseFormat": "nested",
        "startField": "start_frame",
        "endField": "end_frame",
        "defaultStart": 1001,
        "defaultEnd": 1100
      },
      "fps": {
        "jsonField": "fps",
        "default": 25.0
      }
    }
  }
}

